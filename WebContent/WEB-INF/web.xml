<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://java.sun.com/xml/ns/javaee" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		id="WebApp_ID" version="2.5">
  <display-name>home-accountant-version-00</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>Controller</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.htp.accountant.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>by.htp.accountant.listener.ContextListener</listener-class>
  </listener> 
  <filter>
    <filter-name>RequestResponseEncodingFilter</filter-name>
    <filter-class>by.htp.accountant.filter.RequestResponseEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding_for_request</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>encoding_for_response</param-name>
      <param-value>text/html; charset=UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>RequestResponseEncodingFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>LocalizationFilter</filter-name>
    <filter-class>by.htp.accountant.filter.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LocalizationFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>  
  <filter>
    <filter-name>RoleCheckFilter</filter-name>
    <filter-class>by.htp.accountant.filter.RoleCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RoleCheckFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code> 
    <location>/WEB-INF/jsp/404ExceptionPage.jsp</location> 
  </error-page>
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/WEB-INF/jsp/ErrorPage.jsp</location>
  </error-page>    
  <error-page>
    <exception-type>by.htp.accountant.exception.NoSuchCommandException</exception-type>
    <location>/WEB-INF/jsp/404ExceptionPage.jsp</location>
  </error-page>  
</web-app>